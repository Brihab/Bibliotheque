{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
        <tr>
            <th>
                Livres
            </th>
            <td>
                <ul>
                    {%  for livre in auteur.livres %}
                        <li>
                            {{ livre.titre}}
                        </li>
                    {% endfor %}
                </ul>

            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('auteur_index') }}"><span class="btn btn-primary"><i class="fa fa-backward">back to list</i> </span> </a>

    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a>

{% endblock %}
